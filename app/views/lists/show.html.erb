
<div class="container">
  <h1><%= @list.name %></h1>

  <div>
  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn-custom-green"  %>
  </div>

  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
  <div class="card-movie">
      <%= image_tag bookmark.movie.poster_url %>
      <div class="card-movie-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
        </div>
          <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, class: "btn-custom-red" %>
      </div>
  </div>
    <% end %>
  </div>

</div>
